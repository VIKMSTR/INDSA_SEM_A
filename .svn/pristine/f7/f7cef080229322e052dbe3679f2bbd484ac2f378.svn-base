        public void AddNewEdge(Node from , Node to)
        {
            Node accessed;
            // zpristupnit vrchol, ze ktereho vede, 
            if (Nodes.ContainsKey(from.Id))
            {
                accessed = Nodes[from.Id];
            }
            else
            {
                throw new System.NullReferenceException("Prvek neexistuje");
            }
            double distance = Math.Sqrt(Math.Pow(Math.Abs(80 - 40), 2) + Math.Pow(Math.Abs(160 - 40), 2));
            //vlozit do nasledniku (pokud uz neexistuje)
            Follower inserter = new Follower(to,new Edge(distance));
            accessed.GetFollowers().AddLast(inserter);
        }

